<html>
<head>
    <title>Todo List</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link href="/assets/styles.css" type="text/css" rel="stylesheet">
    <script src="/assets/todo-list.js" ></script>
</head>
<body>
<div id="todo-table">
    <form id="todo-form">
        <input type="text" name="item" placeholder="add a new todo">
        <button id="add-todo" type="submit">Add TO-DO</button>
    </form>
    <ul>
        <% todos.forEach(function (todo) { %>
            <li id="<%= todo.id %>"><%= todo.item %></li>
        <% }) %>
    </ul>
</div>


</body>
</html>
